@model FUnewsDTO.NewsArticleDTO

@{
    ViewData["Title"] = "Create News Article";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">
        <i class="fas fa-newspaper"></i> @ViewData["Title"]
    </h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input asp-for="NewsArticleId" type="hidden" value="@ViewBag.NewsId" />

                <div class="mb-3">
                    <label asp-for="NewsTitle" class="form-label"></label>
                    <input asp-for="NewsTitle" class="form-control" placeholder="Enter news title" />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Headline" class="form-label"></label>
                    <input asp-for="Headline" class="form-control" placeholder="Enter headline" />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label"></label>
                    <input asp-for="CreatedDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewsContent" class="form-label"></label>
                    <textarea asp-for="NewsContent" rows="5" class="form-control" placeholder="Enter full news content"></textarea>
                    <span asp-validation-for="NewsContent" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewsSource" class="form-label"></label>
                    <input asp-for="NewsSource" class="form-control" placeholder="Enter news source URL (optional)" />
                    <span asp-validation-for="NewsSource" class="text-danger"></span>
                </div>
                @*tags*@
                <div class="mb-3">
                    <label class="form-label">Tags</label>
                    <select asp-for="SelectedTagIds" asp-items="ViewBag.TagList" class="form-select" multiple>
                    </select>
                    <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
                </div>



                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="NewsStatus" class="form-check-input" type="checkbox" id="newsStatusSwitch" />
                    <label class="form-check-label" for="newsStatusSwitch">
                        @Html.DisplayNameFor(model => model.NewsStatus)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedById" class="form-label"></label>
                    <select asp-for="CreatedById" class="form-select" asp-items="ViewBag.CreatedById">
                        <option value="">-- Select Creator --</option>
                    </select>
                    <span asp-validation-for="CreatedById" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdatedById" class="form-label"></label>
                    <select asp-for="UpdatedById" class="form-select" asp-items="ViewBag.UpdatedById">
                        <option value="">-- Select Updater (optional) --</option>
                    </select>
                    <span asp-validation-for="UpdatedById" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
