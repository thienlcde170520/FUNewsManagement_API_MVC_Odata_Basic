@model FUnewsDTO.SystemAccountDTO

<form asp-action="Create" method="post" id="createForm">
    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="AccountName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="AccountEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="AccountPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="AccountRole" class="form-control">
            <option value="">-- Select Role --</option>
            <option value="1">Staff</option>
            <option value="2">Lecture</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-2">Create</button>
</form>
