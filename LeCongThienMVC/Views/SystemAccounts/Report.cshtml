@{
    ViewData["Title"] = "Generate Report";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Report" method="post">
    <div class="form-group">
        <label>Start Date</label>
        <input name="startDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>End Date</label>
        <input name="endDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Generate Report</button>
</form>